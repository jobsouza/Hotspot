<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <gradient
                android:startColor="@color/cor_botao_pressionado"
                android:endColor="@color/cor_botao_pressionado"
                android:angle="270" />
            <!-- 
            android:endColor="@color/cor_botao_normal"
             -->
            <stroke
                android:width="1dp"
                android:color="@color/cor_botao_normal" />
            <corners
                android:radius="2dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
    <item>
       <shape>
            <gradient
                android:startColor="@color/cor_botao_normal" 
                android:endColor="@color/cor_botao_normal"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="@color/cor_botao_pressionado" /> 
            <corners
                android:radius="2dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
</selector>

